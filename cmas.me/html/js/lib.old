    //console.log (albumfilter);
    //console.log (albumsort);

    // global.superdebug ("ALBUM LIST - DB RECORDINGS: antes");
    db.recordings.find({ $and: albumfilter }).sort(albumsort).exec (function (err, docs)
    {
        //console.log (err);
        //console.log (docs);

        var uniqueperfid = [];
        var uniqueperf = [];

        $.each (docs, function (i, el)
